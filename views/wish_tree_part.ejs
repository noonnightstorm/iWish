<section class="comment-item">
	<div class="comment-title">
		<img src="/images/status-<%= comment.status %>.png" alt="" class="comment-status">
		<span class="comment-info">
			<%= comment.user.name %> @ <%= comment.date %>
		</span>
	</div>
	<div class="comment-avatar">
		<img src="/images/Avatar-<%= comment.user.avatar %>.png" alt="avatar" class="comment-avatar-img">
	</div>
	<article class="comment-content-box">
		<div class="comment-operate">
			<% if(comment.status == "iwish") { %>
				<buttom class="modify-comment-btn modify-comment" value="<%= comment._id %>">批准</buttom>
			<% } %>
			<% if(comment.status == "ongoing") { %>
				<buttom class="modify-comment-btn modify-comment" value="<%= comment._id %>">完成</buttom>
			<% } %>
			&nbsp
			<button class="modify-comment-btn detele-comment" value="<%= comment._id %>">删除</button>
		</div>
		<span class="comment-content">
			<%= comment.content %>
		</span>
	</article>
	<div class="comment-vote">
		<span class="comment-vote-score"><%= comment.score %></span>
		<button class="add-score-btn" value="<%= comment._id %>">+1</button>
	</div>
</section>